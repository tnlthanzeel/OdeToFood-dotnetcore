@page
@model OdeToFood.Pages.Restuarants.ListModel
@{
    ViewData["Title"] = "List";
}

<h2>Restuarants</h2>

<form method="get">
    <div class="form-group">
        <div class="input-group"></div>
        <input type="search" class="form-control" asp-for="SearchTerm" />
        <span class="input-group">
            <button class="btn btn-info">
                <i class="glyphicon glyphicon-search"></i>
                search
            </button>
        </span>
    </div>
</form>

<table class="table">
    @foreach (var restaurant in Model.Restaurants)
    {
        <tr>
            <td>@restaurant.Name</td>
            <td>@restaurant.Location</td>
            <td>@restaurant.Cuisine</td>
            <td>
                <a class="btn btn-info" asp-page="./Detail" asp-route-restaurantId="@restaurant.Id">Detail</a>
                <a class="btn btn-link" asp-page="./Edit" asp-route-restaurantId="@restaurant.Id">Edit</a>
            </td>
        </tr>
    }
</table>
<a asp-page="./Edit" class="btn btn-primary">Add New</a>
