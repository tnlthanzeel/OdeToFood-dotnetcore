@*@using OdeToFood.Core*@
@model Restaurants

<div class="card card-group">
    <div class="card-header">
        <h3>@Model.Name</h3>
    </div>
    <div class="card-body">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>
    <div class="card-footer">
        <a class="btn btn-info" asp-page="./Detail" asp-route-restaurantId="@Model.Id">Detail</a>
        <a class="btn btn-link" asp-page="./Edit" asp-route-restaurantId="@Model.Id">Edit</a>
        <a class="btn btn-danger" asp-page="./Delete" asp-route-restaurantId="@Model.Id">Delete</a>

    </div>
</div>